<OpenNI>
	<Licenses>
		<!-- Add application-specific licenses here 
		<License vendor="vendor" key="key"/>
		-->
	</Licenses>
	<Log writeToConsole="false" writeToFile="false">
		<!-- 0 - Verbose, 1 - Info, 2 - Warning, 3 - Error (default) -->
		<LogLevel value="3"/>
		<Masks>
			<Mask name="ALL" on="true"/>
		</Masks>
		<Dumps>
		</Dumps>
	</Log>
	<ProductionNodes>
		<!-- Create a depth node and give it a name alias (useful if referenced ahead in this script) -->
		<Node type="Depth" name="MyDepth" stopOnError="false">
			<Configuration>
				<Mirror on="false" />
			</Configuration>
		</Node>
		
		<!-- Create an image node. If it fails, continue anyway. -->
		<Node type="Image"  name="MyColor" stopOnError="false" >
			<Configuration>
				<Mirror on="false" />
			</Configuration>
		</Node>
	</ProductionNodes>
</OpenNI>
